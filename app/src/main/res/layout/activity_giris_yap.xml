<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GirisYap">

    <TextView
        android:id="@+id/kullaniciadLabel"
        android:layout_width="145dp"
        android:layout_height="37dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="176dp"
        android:text="@string/kullaniciadi"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/GirisYapKutu"
        android:layout_width="246dp"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kullaniciadLabel" />

    <TextView
        android:id="@+id/SifreLabel"
        android:layout_width="145dp"
        android:layout_height="37dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="380dp"
        android:text="Şifre"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/SifreKutu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SifreLabel" />

    <Button
        android:id="@+id/button_giris"
        android:layout_width="139dp"
        android:layout_height="82dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="548dp"
        android:onClick="girisYap"
        android:text="GİRİŞ YAP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/HataKutusu"
        android:layout_width="192dp"
        android:layout_height="24dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="56dp"
        android:textColor="#FF0B0B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>